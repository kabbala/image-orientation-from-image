{

  "manifest_version": 2,
  "name": "image-orientation: from-image",
  "version": "0.1",
  "description": "Attatch 'image-orientation: from-image' CSS to rotate image according to ExIF info.",
  "homepage_url": "https://github.com/kabbala/image-orientation-from-image",
  
  "applications": {
    "gecko": {
      "id": "image-orientation-from-image@github.com"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["/css/image-orientation-from-image.css"]
    }
  ]

}
